{
  "name": "node-api",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "yarn build:types && yarn build:js",
    "build:js": "tsc -b . && npx tsc-alias",
    "build:types": "tsc --emitDeclarationOnly",
    "dev": "nodemon --exec yarn restart",
    "restart": "rimraf dist && yarn build && yarn start",
    "start": "node dist/index.js",
    "test": "cross-env NODE_ENV=testing jest --forceExit --detectOpenHandles --watchAll",
    "test-auth": "yarn test -t Authentication:",
    "test-controllers": "yarn test -t controllers",
    "test-models": "yarn test -t model",
    "test-routes": "yarn test -t router",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check -- --watch"
  },
  "jest": {
    "restoreMocks": true,
    "setupFilesAfterEnv": [
      "<rootDir>/src/test-db-setup.ts"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "dist/",
      "<rootDir>/src/test-db-setup.ts"
    ],
    "testURL": "http://localhost/",
    "verbose": true
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "body-parser": "1.19.0",
    "cors": "2.8.5",
    "cuid": "2.1.8",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "jsonwebtoken": "8.5.1",
    "mongoose": "5.11.15",
    "morgan": "1.10.0",
    "validator": "13.5.2"
  },
  "devDependencies": {
    "@babel/cli": "7.13.0",
    "@babel/core": "7.13.8",
    "@babel/plugin-proposal-class-properties": "7.13.0",
    "@babel/preset-env": "7.13.9",
    "@babel/preset-typescript": "7.13.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash.map": "^4.6.13",
    "@types/mongodb": "^3.6.8",
    "@types/mongoose": "^5.10.3",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.31",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "26.6.3",
    "cross-env": "7.0.3",
    "eslint": "^7.21.0",
    "eslint-loader": "4.0.2",
    "eslint-plugin-jest": "24.1.5",
    "jest": "26.6.3",
    "lodash.map": "^4.6.0",
    "mock-req-res": "1.2.0",
    "nodemon": "2.0.7",
    "prettier": "^2.2.1",
    "rimraf": "3.0.2",
    "supertest": "6.1.3",
    "typescript": "^4.2.2"
  }
}